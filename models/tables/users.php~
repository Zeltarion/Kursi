<?php
class Users extends TableGateWay
{
    public $db;
    public function __construct($db)
    {
        $this->db = $db;
        parent::__construct($db,'users');
    }

    public function id_users()
    {
        $blog_arr = array();
        $login = $_SESSION['login'];
        $Sql = 'SELECT id_user FROM users WHERE login = \''.$login.'\'';
        $rez = $this->db->query($Sql);
        while($blog_arr[] = mysql_fetch_array($rez))
        {
            $id_user = $blog_arr['id_user'];
        }
        //return intval($id_user);
        //return $_SESSION['login'];
        return $blog_arr['id_user'];
    }
}
?>
